@page
@model Abby.Web.Pages.Customer.HomePage.DetailsModel

@{
    var item = Model.MenuItem;
}

<div class="">
    <form method="post">
        <input hidden asp-for="@item.Id" />
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="text-light ml-0 row ">
                    <div class="col-12 col-md-6 pt-2">
                        <h1 class="text-primary">@item.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-end pt-2">
                        <h1 class="text-muted">$@item.Price</h1>
                    </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                        <span class="badge bg-warning p-3 h3">@item.Category.Name</span>
                                        <span class="badge bg-dark p-3">@item.FoodType.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(item.Description)</p>

                                            <div class="form-floating my-2">
                                            <input asp-for="Count" class="form-control" aria-required="true" />
                                            <label asp-for="Count"></label>
                                            <span asp-validation-for="Count" class="text-danager"></span>
                                        </div>
                                          
                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@item.ImageURL" width="100%" class="rounded" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-page="./Index" class="btn btn-success btn-square form-control" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
